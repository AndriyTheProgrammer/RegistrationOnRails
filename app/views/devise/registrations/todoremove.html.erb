<h2>Sign up Customer</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= devise_error_messages! %>    <%= f.hidden_field :role, value: 0 %>    <div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: false %>
</div>
    <div class="field">
  <%= f.label :password %>
  <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off" %>
</div>    <div class="field">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off" %>
</div>
    <% resource.build_customer if resource.customer.nil? %>    <%= f.fields_for :customer do |w| %>
        <div class="field">
          <%= w.label :FistName %><br />
          <%= w.text_field :FistName, autocomplete: "off" %>
        </div>        <div class="field">
  <%= w.label :LastName %><br />
  <%= w.text_field :LastName, autocomplete: "off" %>
</div>        <div class="field">
  <%= w.label :country %><br />
  <%= w.text_field :country %>
</div>        <div class="field">
  <%= w.label :city %><br />
  <%= w.text_field :city %>
</div>        <div class="field">
  <%= w.label :BusinessName %><br />
  <%= w.text_field :BusinessName %>
</div>        <div class="field">
  <%= w.label :DateOfBirth %><br />
  <%= w.date_field :DateOfBirth, min: Date.new(1921, 01, 01), max: Date.new(2008, 12, 31) %>
</div>
        <% resource.customer.build_customer_membership if resource.customer.customer_membership.nil? %>              <%= w.fields_for :customer_membership do |cm|%>
            <% @memberships.each do |m| %>
                <ul class="skills">
                  <%= cm.check_box :membership_id, {}, m.id, nil %>
                  <%= cm.label :membership_id, m.title %>                  </ul>
            <% end %>
        <% end %>        <div class="field">
  <%= w.label :Gender %><br />
  <%= w.select(:Gender, id: 'gender', class: 'select') do %>
      <% [['Male', 'Male'],
          ['Fmale', 'Fmale'],
         ].each do |el| %>
          <%= content_tag(:option, el.first, value: el.last) %>
      <% end %>
  <% end %>
</div>        <div class="field">
  <%= w.label :Website %><br />
  <%= w.text_field :Website %>
</div>        <div class="field">
  <%= w.label :Phone %><br />
  <%= w.text_field :Phone %>
</div>        <div class="field">
  <%= w.label :Skype %><br />
  <%= w.text_field :Skype %>
</div>    <% end %>
    <%= f.file_field :avatar %>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
<% end %>